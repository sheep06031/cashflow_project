<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.cashflow.mapper.AiFeedBackMapper">
    <insert id="addAiFeedback">
        insert into
            feedback_tb
        values (0, #{userId}, #{date}, #{feedbackEng}, #{feedbackKr}, #{count})
    </insert>
    <select id="getAiFeedbackByUserIdAndDate">
        select
            *
        from
            feedback_tb
        where
            user_id = #{userId} AND date = #{date}
    </select>
    <update id="updateAiFeedback">
        update
            feedback_tb
        set
            feedback_eng = #{feedbackEng},
            feedback_kr = #{feedbackKr},
            count = #{count}
        where
            user_id = #{userId} AND date= #{date}
    </update>
    <select id="getFeedbackByUserIdAndDate">
        select
            *
        from
            feedback_tb
        where
            user_id = #{userId} AND date= #{date}
    </select>
    <select id="getFeedbackListByUserId">
        select
            *
        from
            feedback_tb
        where
            user_id = #{userId}
    </select>
</mapper>