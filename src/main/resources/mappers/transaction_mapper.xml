<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.cashflow.mapper.TransactionMapper">
    <insert id="addTransaction" useGeneratedKeys="true" keyProperty="transactionId">
        insert into
            transaction_tb
        values (0, #{userId}, #{transactionDt}, #{cost}, #{spendingType}, #{category}, #{description})
    </insert>
    <select id="getTransactionByTransactionId">
        select
            *
        from
            transaction_tb
        where
            transaction_id = #{transactionId}
    </select>
    <delete id="removeTransactionByTransactionId">
        delete from
            transaction_tb
        where
            transaction_id = #{transactionId}
    </delete>
    <select id="getTransactionListByUserId">
        select
            *
        from
            transaction_tb
        where
            user_id = #{userId}
        order by
            transaction_dt DESC
    </select>
    <update id="updateTransactionByTransactionId">
        update
            transaction_tb
        set
            transaction_dt = #{transactionDt},
            cost = #{cost},
            spending_type = #{spendingType},
            category = #{category},
            description = #{description}
        where
            transaction_id = #{transactionId}
    </update>

</mapper>