<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.cashflow.mapper.UserMapper">
    <insert id="addUser" useGeneratedKeys="true" keyProperty="userId">
        insert into
            user_tb
        values (0, #{username}, #{email}, #{password}, 0, now(), null)
    </insert>

    <select id="getUserByUserId">
        select
            *
        from
            user_tb
        where
            user_id = #{userId}
    </select>

    <select id="getUserByUsername">
        select
            *
        from
            user_tb
        where
            username = #{username}
    </select>
    <select id="getUserByEmail">
        select
            *
        from
            user_tb
        where
            email = #{email}
    </select>
    <update id="changePassword">
        update
            user_tb
        set
            password = #{user.password},
            update_dt = now()
        where
            user_id = #{userId}
    </update>

</mapper>